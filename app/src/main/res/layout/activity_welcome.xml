<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/blue_light"> <!-- Optional background color -->

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo" /> <!-- Replace with your logo -->

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fox-Carpool"
        android:textSize="26sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:textColor="@android:color/white" />

    <!-- App Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Sharing App"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white" />

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="false"
        android:background="@drawable/ic_launcher_background"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Log In Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textAllCaps="false"
        android:background="@drawable/ic_launcher_background" />

    <!-- Product By Text at the Bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product By"
        android:textSize="14sp"
        android:paddingTop="60dp"
        android:textColor="@android:color/white" />

    <!-- Company Branding Logo/Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHITE LABEL FOX"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

</LinearLayout>
