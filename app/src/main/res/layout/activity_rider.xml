<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewWelcomeRider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Rider!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/buttonRequestRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request a Ride"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textViewWelcomeRider"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:layout_below="@id/buttonRequestRide"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
